<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="Libro" table="Libro">
        <id name="id" type="int" column="id">
            <generator class="increment"/>
        </id>
        <property name="título" type="string" column="título"/>
        <property name="autor" type="string" column="autor"/>
        <property name="año_nacimiento" type="string" column="año_nacimiento"/>
        <property name="año_publicacion" type="string" column="año_publicacion"/>
        <property name="editorial" type="string" column="editorial"/>
        <property name="num_páginas" type="string" column="num_páginas"/>
    </class>
</hibernate-mapping>